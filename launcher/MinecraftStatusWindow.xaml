<Window x:Class="ModernMinas.Launcher.MinecraftStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="MinecraftStatusWindow" Height="48" Width="640" ResizeMode="NoResize" SizeToContent="Height" Topmost="True" WindowStartupLocation="CenterScreen" FontFamily="Tahoma" FontSize="11" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False" ShowActivated="False" Background="{x:Null}">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Name="WaitingLogo" Height="48" Width="48" gif:ImageBehavior.AnimatedSource="Images/deviantArt/rotatingBlocks/minecraft_diamond_block_by_ldaxin-d3f5blw.gif" />
            <Label Name="Status" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Opacity="0.5" FontFamily="Arial" FontSize="16">
                Please wait...
            </Label>
        </StackPanel>
    </DockPanel>
</Window>
